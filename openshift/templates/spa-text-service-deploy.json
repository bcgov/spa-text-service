{
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "annotations": {
      "description": "Deployment template for spa-text-service",
      "tags": "npm"
    },
    "name": "spa-text-service"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "ImageStream",
      "metadata": {
        "annotations": {
          "description": "runtime images stream"
        },
        "name": "${SOURCE_NAME}"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "replicas": 2,
        "selector": {
          "app": "${NAME}",
          "deploymentconfig": "${NAME}"
        },
        "strategy": {
          "rollingParams": {
            "intervalSeconds": 1,
            "maxSurge": "25%",
            "maxUnavailable": "25%",
            "timeoutSeconds": 600,
            "updatePeriodSeconds": 1
          },
          "type": "Rolling"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "app": "${NAME}",
              "deploymentconfig": "${NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "${SOURCE_NAME}",
                "imagePullPolicy": "Always",
                "name": "${NAME}",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "SERVICE_AUTH_TOKEN",
                    "value": "${SERVICE_AUTH_TOKEN}"
                  }
                  {
                    "name": "LOGGER_HOST",
                    "value": "${LOGGER_HOST}"
                  },
                  {
                    "name": "LOGGER_PORT",
                    "value": "${LOGGER_PORT}"
                  },
                  {
                    "name": "SPLUNK_AUTH_TOKEN",
                    "value": "${SPLUNK_AUTH_TOKEN}"
                  },
                  {
                    "name": "USE_SPLUNK",
                    "value": "${USE_SPLUNK}"
                  }
                ],
                "resources": {
                  "requests": {
                    "cpu": "100m",
                    "memory": "100Mi"
                  },
                  "limits": {
                    "cpu": "250m",
                    "memory": "200Mi"
                  }
                }
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "securityContext": {},
            "terminationGracePeriodSeconds": 30
          }
        },
        "test": false,
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": ["${NAME}"],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_NAMESPACE}",
                "name": "${SOURCE_NAME}:${TAG_NAME}"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "ports": [
          {
            "name": "8080-tcp",
            "port": 8080,
            "protocol": "TCP",
            "targetPort": 8080
          }
        ],
        "selector": {
          "app": "${NAME}",
          "deploymentconfig": "${NAME}"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "host": "${APPLICATION_DOMAIN}",
        "port": {
          "targetPort": "8080-tcp"
        },
        "tls": {
          "insecureEdgeTerminationPolicy": "Redirect",
          "termination": "edge"
        },
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        }
      }
    }
  ],
  "parameters": [
    {
      "description": "The name of the source image",
      "displayName": "Source Name",
      "name": "SOURCE_NAME",
      "required": true,
      "value": "spa-text-service"
    },
    {
      "description": "The name assigned to all of the openshift objects defined in this template. It is also the name of runtime image you want.",
      "displayName": "Name",
      "name": "NAME",
      "required": true,
      "value": "spa-text-service"
    },
    {
      "description": "The exposed hostname that will route to the service, e.g., myappname.pathfinder.gov.bc.ca, if left blank a value will be defaulted.",
      "displayName": "Application Hostname",
      "name": "APPLICATION_DOMAIN",
      "value": "bcp-spa-text-service-dev.pathfinder.gov.bc.ca"
    },

    {
      "description": "The namespace where to get the above image name",
      "displayName": "Image Namespace",
      "name": "IMAGE_NAMESPACE",
      "required": true,
      "value": "rrhcla-tools"
    },
    {
      "description": "The TAG name for this environment, e.g., dev, test, prod",
      "displayName": "Env TAG name",
      "name": "TAG_NAME",
      "value": "dev"
    },
    {
      "description": "Auth token used to authenticate the service",
      "displayName": "SERVICE_AUTH_TOKEN",
      "name": "SERVICE_AUTH_TOKEN",
      "required": true,
      "value": "none"
    },
    {
      "description": "Host name for the Splunk Forwarder",
      "displayName": "LOGGER_HOST",
      "name": "LOGGER_HOST",
      "required": true,
      "value": "splunk-forwarder"
    },
    {
      "description": "Port for the Splunk Forwarder",
      "displayName": "LOGGER_PORT",
      "name": "LOGGER_PORT",
      "required": true,
      "value": "8080"
    },
    {
      "description": "Authorization token required to use the splunk server",
      "displayName": "SPLUNK_AUTH_TOKEN",
      "name": "SPLUNK_AUTH_TOKEN",
      "required": true,
      "value": ""
    },
    {
      "description": "flag to use the splunk server",
      "displayName": "USE_SPLUNK",
      "name": "USE_SPLUNK",
      "required": true,
      "value": "false"
    }
  ]
}
