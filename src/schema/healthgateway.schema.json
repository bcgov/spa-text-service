{
    "id": "healthgateway/healthgateway.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "1.0.1",
    "definitions": {
        "DateType": {
            "$comment": "Date as a string formatted YYYY-MM-DD",
            "type": "string",
            "pattern": "^[12][0-9]{3}-[01][0-9]-[0-3][0-9]$"
        },
        "PhnType": {
            "$comment": "Personal Health number",
            "type": "string",
            "minLength": 10,
            "maxLength": 13,
            "pattern": "^[0-9]*$"
        },
        "PageSizeType": {
            "type": "integer"
        },
        "PageNumberType": {
            "type": "integer"
        },
        "OrderByType": {
            "type": "string",
            "enum": [
                "ASC",
                "DESC"
            ]
        },
        "NameType": {
            "id": "#name",
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 15,
                    "pattern": "^[a-zA-Z][a-zA-Z\\-.\\' ]*$"
                },
                "middleInit": {
                    "type": "string",
                    "maxLength": 2
                },
                "LastName": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 25,
                    "pattern": "^[a-zA-Z][a-zA-Z\\-.\\' ]*$"
                }
            },
            "required": [ "firstName", "LastName" ]
        },
        "AddressLineType": {
            "type": "string",
            "maxLength": 25
        },
        "AddressType": {
            "id": "#address",
            "type": "object",
            "properties": {
                "addrLine1": {
                    "$ref": "#/definitions/AddressLineType"
                },
                "addrLine2": {
                    "$ref": "#/definitions/AddressLineType"
                },
                "city": {
                    "type": "string",
                    "maxLength": 25
                },
                "province": {
                    "$comment": "Abbreviation for province (e.g. BC)",
                    "type": "string",
                    "maxLength": 2
                },
                "country": {
                    "$comment": "Abbreviation for country (e.g. CAN)",
                    "type": "string",
                    "maxLength": 3
                },
                "postalCode": {
                    "type": "string",
                    "maxLength": 10
                }
            }
        },
        "MedicationRecordsType": {
            "id": "#medicationRecords",
            "type": "array",
            "record": {
                "$comments": "This the ODR identifier (unique key)",
                "recordId": {
                    "type": "string"
                },
                "$comment": "Date the prescription was dispensed",
                "dateDispensed": {
                    "$ref": "#/definitions/DateType"
                },
                "rxNumber": {
                    "type": "string"
                },
                "genericName": {
                    "type": "string"
                },
                "practitioner": {
                    "$ref": "#name"
                },
                "quantity": {
                    "type": "string"
                },
                "refills": {
                    "type": "string"
                },
                "dinpin": {
                    "type": "string"
                },
                "dispensingPharmacy": {
                    "pharmacyId": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "siteAddress": {
                        "$ref": "#address"
                    },
                    "phoneNumber": {
                        "type": "string"
                    },
                    "faxNumber": {
                        "type": "string"
                    }
                },
                "directions": {
                    "type": "string"
                },
                "rxStatus": {
                    "type": "string",
                    "enum": [
                        "F",
                        "D"
                    ]
                }
            }
        }
    },
    "title": "HealthGateway",
    "description": "Message structure for medication history request and response",
    "type": "object",
    "properties": {
        "uuid": {
            "$comment": "Unique identifier (input/output)",
            "type": "string"
        },
        "hdid": {
            "$comment": "Requesting user - for auditing/tracability (input)",
            "type": "string",
            "maxLength": 54
        },
        "requestingIP": {
            "$comment": "IP Address of the user requesting the data (input)",
            "type": "string"
        },
        "getMedicationHistoryRequest": {
            "$comment": "Request to get a patient's medical history (input)",
            "type": "object",
            "properties": {
                "startDate": {
                    "$ref": "#/definitions/DateType"
                },
                "endDate": {
                    "$ref": "#/definitions/DateType"
                },
                "phn": {
                    "$ref": "#/definitions/PhnType"
                },
                "pageSize": {
                    "$ref": "#/definitions/PageSizeType",
                    "default": 25
                },
                "pageNumber": {
                    "$ref": "#/definitions/PageNumberType",
                    "default": 1
                },
                "order": {
                    "$ref": "#/definitions/OrderByType",
                    "default": "DESC"
                }
            },
            "required": [
                "phn"
            ]
        },
        "getMedicationHistoryResponse": {
            "$comment": "Patient's medical history (output)",
            "type": "object",
            "properties": {
                "records": {
                    "$comment": "Arrary of medication records",
                    "$ref": "#medicationRecords"
                },
                "totalRecords": {
                    "$comment": "total number of medication records for the time frame without page limits",
                    "type": "integer"
                },
                "totalPages": {
                    "$comment": "Total number of page for data",
                    "type": "integer"
                }
            }
        },
        "maintainProtectiveWord": {
            "$comment": "Request patient's protective word (input/output)",
            "type": "object",
            "properties": {
                "operator": {
                    "$comment": "Type of operation being requested",
                    "type": "string",
                    "enum": [
                        "GET",
                        "SET",
                        "DELETE"
                    ]
                },
                "phn": {
                    "$ref": "#/definitions/PhnType"
                },
                "value": {
                    "$comment": "Protected word returned if a get",
                    "type": "string",
                    "maxLength": 8
                }
            },
            "required": [
                "operator",
                "phn"
            ]
        }    
    },
    "required": [
        "uuid"
    ]
}